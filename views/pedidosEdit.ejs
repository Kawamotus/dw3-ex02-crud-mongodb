<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Pedido de <%=pedido.nome%></h1>
        </div>
        <div class="card-body">
            <form action="/pedidos/update/<%= pedido._id%>" method="post">
                <label for="">Nome</label>
                <input type="text" name="nome" id="nome" class="form-control" value="<%=pedido.nome%>" required><br>
                <label for="">NÂ° do Pedido:</label>
                <input type="number" name="numPedido" id="numPedido" class="form-control" value="<%=pedido.numPedido%>" readonly><br>
                <label for="">Produto</label>
                <input type="text" name="produto" id="produto" class="form-control" value="<%=pedido.produto%>" required><br>
