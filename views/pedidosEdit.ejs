                <input type="number" name="precoUnitario" id="precoUnitario" class="form-control" value="<%=pedido.precoUnitario%>" required><br>
                <input type="hidden" name="id" value="<%=pedido._id%>">
                <button type="submit" class="btn btn-success">Atualizar Pedido</button>
            </form>
        </div>
    </div>
</div>

